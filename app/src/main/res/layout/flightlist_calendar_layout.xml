<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="8dp"
android:layout_gravity="center">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/strDate"
              android:text="22 May 2012"
              android:layout_gravity="center"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:layout_gravity="center">

        <TextView
                android:text="64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice" android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:text=".30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvPrice2" android:textSize="9sp"
                app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginStart="1dp"
                app:layout_constraintStart_toEndOf="@+id/tvPrice"/>
        <TextView
                android:text="MYR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" android:textSize="9sp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="1dp" app:layout_constraintStart_toEndOf="@+id/tvPrice"/>
    </android.support.constraint.ConstraintLayout>
</LinearLayout>