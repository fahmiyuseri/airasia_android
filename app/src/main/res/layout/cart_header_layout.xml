<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/colorBlack"
android:padding="10dp"
app:layout_constraintEnd_toEndOf="parent">

<TextView
        android:text="Cart"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
/>
<android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" android:id="@+id/tvScroll">

    <TextView
            android:text="64"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:textColor="@color/colorWhite"
            android:text=".30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice2" android:textSize="9sp"
            app:layout_constraintTop_toBottomOf="@+id/textView11" android:layout_marginStart="1dp"
            app:layout_constraintStart_toEndOf="@+id/tvPrice"/>
    <TextView
            android:textColor="@color/colorWhite"
            android:text="MYR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" android:textSize="9sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="1dp" app:layout_constraintStart_toEndOf="@+id/tvPrice"/>
</android.support.constraint.ConstraintLayout>
</LinearLayout>