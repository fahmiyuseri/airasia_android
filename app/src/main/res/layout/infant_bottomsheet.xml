<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:id="@+id/infant_bottomsheet"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@android:color/transparent"
                  android:orientation="vertical"
                  app:behavior_hideable="false"
                  app:behavior_peekHeight="0dp"
                  app:layout_behavior="android.support.design.widget.BottomSheetBehavior">
<android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/lighter_grey2"
        app:cardCornerRadius="8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guest"
                android:textStyle="bold" android:layout_margin="8dp"/>
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/tvOrigin1">

            <TextView
                    android:text="Adult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adult" android:textStyle="bold"
                    android:textColor="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:text="12 years old and above"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adultdesc" android:textSize="12sp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp" app:layout_constraintTop_toBottomOf="@+id/adult"
                    android:layout_marginTop="4dp"/>
            <TextView
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMinusAdult"
                    android:textSize="25sp" app:layout_constraintEnd_toStartOf="@+id/tvTotalAdults"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTotalAdults"
                    android:textSize="35sp" app:layout_constraintEnd_toStartOf="@+id/tvAddAdult"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAddAdult" android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>


        </android.support.constraint.ConstraintLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightest_grey"
              />
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

            <TextView
                    android:text="infant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/infant" android:textStyle="bold"
                    android:textColor="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:text="Below 2 years old"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/infantdesc" android:textSize="12sp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp" app:layout_constraintTop_toBottomOf="@+id/infant"
                    android:layout_marginTop="4dp"/>
            <TextView
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMinusInfant"
                    android:textSize="25sp" app:layout_constraintEnd_toStartOf="@+id/tvTotalInfant"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTotalInfant"
                    android:textSize="35sp"
                    app:layout_constraintEnd_toStartOf="@+id/tvAddInfants"
                    android:layout_marginEnd="7dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAddInfants" android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>

        </android.support.constraint.ConstraintLayout>
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightest_grey"
        />
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

            <TextView
                    android:text="Kids"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kids" android:textStyle="bold"
                    android:textColor="@color/colorBlack" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
            />
            <TextView
                    android:text="12 years old and above"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kidsDesc" android:textSize="12sp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp" app:layout_constraintTop_toBottomOf="@+id/kids"
                    android:layout_marginTop="4dp"/>
            <TextView
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMinusKids"
                    android:textSize="25sp" app:layout_constraintEnd_toStartOf="@+id/tvTotalKids"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"/>
            <TextView
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTotalKids"
                    android:textSize="35sp" app:layout_constraintEnd_toStartOf="@+id/tvAddKids"
                    android:layout_marginEnd="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"/>
            <TextView
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAddKids" android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent" android:textSize="25sp"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"/>

        </android.support.constraint.ConstraintLayout>
        <Button
                android:text="Submit"
                android:layout_width="match_parent"
                android:background="@color/green500"
                android:layout_margin="8sp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_height="match_parent" android:id="@+id/btnSubmit"/>
    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>